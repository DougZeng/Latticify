<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin_half"
    android:paddingEnd="@dimen/activity_horizontal_margin_half"
    android:paddingStart="@dimen/activity_horizontal_margin_half"
    android:paddingTop="@dimen/activity_vertical_margin_half">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:text="@string/invite_intro"
        android:textAlignment="center" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/card_view_radius"
        app:cardElevation="@dimen/card_view_elevation"
        app:cardUseCompatPadding="true"
        app:contentPaddingBottom="@dimen/activity_vertical_margin"
        app:contentPaddingLeft="@dimen/activity_horizontal_margin"
        app:contentPaddingRight="@dimen/activity_horizontal_margin"
        app:contentPaddingTop="@dimen/activity_vertical_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/sendTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:paddingBottom="@dimen/activity_vertical_margin_half"
                android:paddingEnd="@dimen/activity_horizontal_margin_half"
                android:paddingStart="@dimen/activity_horizontal_margin_half"
                android:paddingTop="@dimen/activity_vertical_margin_half"
                android:text="@string/send"
                android:textAllCaps="true" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>